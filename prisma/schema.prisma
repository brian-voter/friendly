// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  firstName    String
  lastName     String
  zipCode      String
  bio          String?       @default("")
  hobbies      String?       @default("")
  interests    String?       @default("")
  friendRadius Int?          @default(10)
  createdAt    DateTime      @default(now()) @db.Timestamptz(3)
  updatedAt    DateTime      @updatedAt @db.Timestamptz(3)
  imageKey     String?       @default("")
  usersLiked   LikeDislike[] @relation("UsersLiked")
  likedBy      LikeDislike[] @relation("LikedBy")
}

model LikeDislike {
  fromUser   User     @relation("UsersLiked", fields: [fromUserId], references: [id])
  toUser     User     @relation("LikedBy", fields: [toUserId], references: [id])
  fromUserId Int
  toUserId   Int
  timestamp  DateTime @default(now()) @db.Timestamptz(3)
  liked      Boolean

  @@id([fromUserId, toUserId])
}
